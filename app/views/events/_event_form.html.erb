<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div>METRICS:</div>
      <ul>
      <%= f.fields_for :int_metric do |builder|%>
      <li>
        <%= builder.label :integer_value %>
        <%= builder.number_field :int_val %>
      </li>
      <% end %>
      <%= f.fields_for :bool_metric do |builder|%>
      <li>
        <%= builder.label :boolean_value %>
        <%= builder.check_box :bool_val %>
      </li>
      <% end %>
      <%= f.fields_for :time_metric do |builder|%>
      <li>
        <%= builder.label :time_value %>
        <%= builder.time_field :time_val %>
      </li>
      <% end %>
      </ul>

      <%= f.submit "Create Event", class: "btn btn-primary" %>
    <% end %>
  </div>
