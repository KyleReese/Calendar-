<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

<!-- We need to do something with the fields_for method -->
      <div>METRICS:</div>
      <ul>
      <%= f.fields_for :metric do |builder|%>
      <li>
        <%= builder.text_field :name %>
      </li>
      <% end %>
      </ul>

      <%= f.submit "Create Event", class: "btn btn-primary" %>
    <% end %>
  </div>
