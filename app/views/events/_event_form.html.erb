<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br /><br />Add event to Google Calendar <br /><br />
    <label class="switch">
      <input type="checkbox" onclick="$('#target').toggle(); $('#target2').toggle();">
      <div class="slider"></div>
    </label><br />
    <div id="target2">
    <%= form_for @event do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div>Metrics:</div>
      <table>
        <% @event.metrics.each do |metric, i| %>
          <%= render 'metrics/edit_metric', locals: {
             metric: metric,
             index: i,
             form: f
           } %>
        <% end %>
      </table>

      <%= render 'event_classes/select', locals: {
          form: f,
          event_classes: @event.event_classes
        } %>

      <%= f.submit "Update Event", class: "btn btn-primary" %>
    <% end %>
  </div>
    <div id="target" style="display: none">
      <h2>Google event parameters:</h2>
      <form>
        Name:<br>
        <input type="text"><br><br>
        Start:<br>
        <input type="datetime-local"><br><br>
        End:<br>
        <input type="datetime-local"><br><br>
        <input type="submit" class="btn btn-primary" value="Add Event">
      </form>
    </div>
  </div>
</div>
