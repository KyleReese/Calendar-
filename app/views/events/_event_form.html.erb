<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, @event] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div>Metrics:</div>
      <table>
        <% @event.metrics.each do |metric, i| %>
          <%= render 'metrics/edit_metric', locals: {
             metric: metric,
             index: i,
             form: f
           } %>
        <% end %>
      </table>

      <%= render 'event_classes/select', locals: {
          form: f,
          event_classes: @event.event_classes
        } %>

      <%= f.submit "Update Event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
