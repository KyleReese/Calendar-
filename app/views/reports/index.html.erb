<h1>Reports</h1>
<div class="chart"></div>
<%= javascript_tag "datag = #{@data.to_json.html_safe};" %>

<script>

var x = d3.scale.linear()
    .domain([0, d3.max(datag)])
    .range([0, 420]);

d3.select(".chart")
  .selectAll("div")
    .data(datag)
  .enter().append("div")
    .style("width", function(d) { return x(d) + "px"; })
    .text(function(d) { return d; });
</script>

<% if @analytics[:standard_deviation]%>
<h3>Statistics: </h3>
<ul>
  <li>Standard Deviation: <%= @data.standard_deviation %></li>
</ul>
<% end %>
